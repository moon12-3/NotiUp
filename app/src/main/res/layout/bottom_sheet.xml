<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/bottom_sheet"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:descendantFocusability="beforeDescendants"
    android:focusableInTouchMode="true"
    android:background="@drawable/round"
    app:theme="@style/AppTheme"
    android:orientation="vertical"
    android:padding="10dp"
    app:behavior_hideable="true"
    app:behavior_peekHeight="0dp"
    app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior">
    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/cancel"
            android:textColor="#E7FE54"
            android:textSize="20sp"
            android:text="취소"
            android:textStyle="bold"
            android:layout_marginLeft="15dp"/>
        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:text="알람 설정하기"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_gravity="center"/>
        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />
        <TextView
            android:id="@+id/btn_save"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#E7FE54"
            android:textSize="20sp"
            android:text="저장"
            android:textStyle="bold"
            android:layout_gravity="right"
            android:layout_marginRight="15dp"/>
    </LinearLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_marginTop="40dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="알람 제목 설정"
                android:textStyle="bold"
                android:textColor="#50FFFFFF"
                android:layout_marginLeft="10dp"
                android:inputType="text"
                android:textSize="10sp"/>

            <EditText
                android:id="@+id/et_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:hint="문구를 입력하세요."
                android:layout_marginTop="5dp"
                android:paddingLeft="20dp"
                android:layout_gravity="center"
                android:textColorHint="#66FFFFFF"
                android:textColor="@color/white"
                android:background="@drawable/rect4"
                android:imeOptions="actionDone"/>

            <TextView
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="알림 시 나타날 제목을 설정합니다"
                android:textStyle="bold"
                android:textColor="#50FFFFFF"
                android:layout_marginLeft="10dp"
                android:textSize="10sp"/>
        <LinearLayout
            android:layout_marginTop="50dp"
            android:layout_width="390dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/rect">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:text="시작"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:textColor="@color/white"
                android:textSize="16sp"/>
            <TextView
                android:id="@+id/start_day"
                android:layout_width="110dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:text="2023. 1. 25."
                android:textColor="#ccFFFFFF"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_marginLeft="140dp"
                android:textSize="16sp"
                android:background="@drawable/rect4"/>
            <TextView
                android:id="@+id/start_time"
                android:layout_width="60dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:text="18:00"
                android:textColor="#ccFFFFFF"
                android:textStyle="bold"
                android:gravity="center"
                android:textSize="16sp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/rect4"/>
        </LinearLayout>
        <com.prolificinteractive.materialcalendarview.MaterialCalendarView
            android:layout_marginTop="2dp"
            android:layout_marginLeft="1dp"
            android:background="#55727272"
            android:id="@+id/start_cal"
            android:visibility="gone"
            app:mcv_tileWidth="match_parent"
            app:mcv_tileHeight="match_parent"
            android:textFontWeight="@integer/material_motion_duration_long_1"
            android:paddingTop="10dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            app:mcv_selectionColor="#FFE7FE54"
            app:mcv_headerTextAppearance="@style/CalendarWidgetHeader"
            app:mcv_weekDayTextAppearance="@style/TextStyleSemiBold15"
            app:mcv_dateTextAppearance="@style/CalenderViewDateCustomText"
            android:layout_width="390dp"
            android:layout_height="300dp"/>
        <TimePicker
            android:id="@+id/start_timepicker"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/NumberPickerTheme"
            android:layout_marginTop="2dp"
            android:visibility="gone"
            android:layout_marginLeft="1dp"
            android:timePickerMode="spinner"
            android:background="#55727272"/>
        <LinearLayout
            android:layout_marginTop="1dp"
            android:layout_width="390dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/rect2">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:text="종료"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:textColor="@color/white"
                android:textSize="16dp"/>
            <TextView
                android:id="@+id/end_day"
                android:layout_width="110dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:text="2023. 1. 25."
                android:textColor="#ccFFFFFF"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_marginLeft="140dp"
                android:textSize="16sp"
                android:background="@drawable/rect4"/>
            <TextView
                android:id="@+id/end_time"
                android:layout_width="60dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:text="18:00"
                android:textColor="#ccFFFFFF"
                android:textStyle="bold"
                android:gravity="center"
                android:textSize="16sp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/rect4"/>
        </LinearLayout>
        <com.prolificinteractive.materialcalendarview.MaterialCalendarView
            android:layout_marginTop="2dp"
            android:layout_marginLeft="1dp"
            android:background="#55727272"
            android:id="@+id/end_cal"
            android:visibility="gone"
            app:mcv_tileWidth="match_parent"
            app:mcv_tileHeight="match_parent"
            android:textFontWeight="@integer/material_motion_duration_long_1"
            android:paddingTop="10dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            app:mcv_selectionColor="#FFE7FE54"
            app:mcv_headerTextAppearance="@style/CalendarWidgetHeader"
            app:mcv_weekDayTextAppearance="@style/TextStyleSemiBold15"
            app:mcv_dateTextAppearance="@style/CalenderViewDateCustomText"
            android:layout_width="390dp"
            android:layout_height="300dp"/>
        <TimePicker
            android:id="@+id/end_timepicker"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/NumberPickerTheme"
            android:layout_marginTop="2dp"
            android:visibility="gone"
            android:layout_marginLeft="1dp"
            android:timePickerMode="spinner"
            android:background="#55727272"/>
        <LinearLayout
            android:id="@+id/repeat"
            android:layout_marginTop="1dp"
            android:layout_width="390dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/rect3">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:text="반복"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:textColor="@color/white"
                android:textSize="16dp"/>

            <Spinner
                android:id="@+id/custom_spinner"
                android:layout_width="8dp"
                android:layout_height="15dp"
                android:layout_marginLeft="310dp"
                android:layout_gravity="center"
                android:background="@drawable/right_arrow"/>
        </LinearLayout>

        <TextView
            android:layout_marginTop="40dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="알람 태그 설정"
            android:textStyle="bold"
            android:textColor="#50FFFFFF"
            android:layout_marginLeft="10dp"
            android:textSize="10sp"/>
        <LinearLayout
            android:layout_marginTop="5dp"
            android:layout_width="390dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/rect4">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:text="#과제"
                android:layout_gravity="center"
                android:textColor="@color/white"
                android:textSize="16dp"/>
            <ImageView
                android:layout_width="8dp"
                android:layout_height="15dp"
                android:layout_marginLeft="300dp"
                android:layout_gravity="center"
                android:background="@drawable/right_arrow"/>
        </LinearLayout>
            <TextView
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="알람을 분류합니다"
                android:textStyle="bold"
                android:textColor="#50FFFFFF"
                android:layout_marginLeft="10dp"
                android:textSize="10sp"/>
            <TextView
                android:layout_marginTop="40dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="알람 메모"
                android:textStyle="bold"
                android:textColor="#50FFFFFF"
                android:layout_marginLeft="10dp"
                android:textSize="10sp"/>

            <EditText
                android:id="@+id/et_memo"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:hint="메모를 입력하세요."
                android:textColorHint="#66FFFFFF"
                android:textColor="@color/white"
                android:gravity="top"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:background="@drawable/rect_memo"
                android:inputType="textMultiLine"
                android:imeOptions="actionDone"
                android:maxLength="100"/>

            <TextView
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="알림 시 나타날 메모를 설정합니다"
                android:textStyle="bold"
                android:textColor="#50FFFFFF"
                android:layout_marginLeft="10dp"
                android:textSize="10sp"/>
            <TextView
                android:layout_marginTop="40dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="알람 설정"
                android:textStyle="bold"
                android:textColor="#50FFFFFF"
                android:layout_marginLeft="10dp"
                android:textSize="10sp"/>
            <LinearLayout
                android:layout_marginTop="5dp"
                android:layout_width="390dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/rect">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:text="잠금 화면"
                    android:textStyle="bold"
                    android:layout_gravity="center"
                    android:textColor="@color/white"
                    android:textSize="16dp"/>

                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1"/>

                <Switch
                    android:id="@+id/lockscreen"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    android:switchMinWidth="50dp"
                    android:thumb="@drawable/switch_thumb_selector"
                    android:track="@drawable/switch_track_selector"
                    android:layout_marginRight="15dp"
                    android:layout_gravity="center"/>
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="1dp"
                android:layout_width="390dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/rect2">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:text="알림 센터"
                    android:textStyle="bold"
                    android:layout_gravity="center"
                    android:textColor="@color/white"
                    android:textSize="16dp"/>

                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1"/>

                <Switch
                    android:id="@+id/noticenter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    android:switchMinWidth="50dp"
                    android:thumb="@drawable/switch_thumb_selector"
                    android:track="@drawable/switch_track_selector"
                    android:layout_marginRight="15dp"
                    android:layout_gravity="center"/>
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="1dp"
                android:layout_width="390dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/rect3">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:text="베너"
                    android:textStyle="bold"
                    android:layout_gravity="center"
                    android:textColor="@color/white"
                    android:textSize="16dp"/>

                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1"/>

                <Switch
                    android:id="@+id/banner"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    android:switchMinWidth="50dp"
                    android:thumb="@drawable/switch_thumb_selector"
                    android:track="@drawable/switch_track_selector"
                    android:layout_marginRight="15dp"
                    android:layout_gravity="center"/>
            </LinearLayout>
            <TextView
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="알림의 스타일을 설정합니다"
                android:textStyle="bold"
                android:textColor="#50FFFFFF"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="40dp"
                android:textSize="10sp"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>